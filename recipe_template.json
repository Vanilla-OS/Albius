{
	"setup": [
		{
			"disk": "/dev/sda",
			"operation": "label",
			"params": [
				"gpt"
			]
		},
		{
			"disk": "/dev/sda",
			"operation": "mkpart",
			"params": [
				"boot",
				"ext4",
				1,
				1025
			]
		},
		{
			"disk": "/dev/sda",
			"operation": "mkpart",
			"params": [
				"efi",
				"fat32",
				1025,
				1537
			]
		},
		{
			"disk": "/dev/sda",
			"operation": "mkpart",
			"params": [
				"a",
				"luks-btrfs",
				1537,
				13825,
				"MyVerySecureEncryptionPassword"
			]
		},
		{
			"disk": "/dev/sda",
			"operation": "mkpart",
			"params": [
				"b",
				"luks-btrfs",
				13825,
				26113,
				"MyVerySecureEncryptionPassword"
			]
		},
		{
			"disk": "/dev/sda",
			"operation": "mkpart",
			"params": [
				"home",
				"luks-btrfs",
				26113,
				-1,
				"MyVerySecureEncryptionPassword"
			]
		}
	],
	"mountpoints": [
		{
			"partition": "/dev/sda3",
			"target": "/"
		},
		{
			"partition": "/dev/sda4",
			"target": "/"
		},
		{
			"partition": "/dev/sda1",
			"target": "/boot"
		},
		{
			"partition": "/dev/sda2",
			"target": "/boot/efi"
		},
		{
			"partition": "/dev/sda5",
			"target": "/home"
		}
	],
	"installation": {
		"method": "unsquashfs",
		"source": "/live/filesystem.squashfs"
	},
	"postInstallation": [
		{
			"chroot": true,
			"operation": "pkgremove",
			"params": [
				"/live/filesystem.packages-remove",
				"apt remove"
			]
		},
		{
			"chroot": true,
			"operation": "adduser",
			"params": [
				"default",
				"Default",
				[
					"sudo",
					"lpadmin"
				],
				"password"
			]
		},
		{
			"chroot": true,
			"operation": "timezone",
			"params": [
				"America/Sao_Paulo"
			]
		},
		{
			"chroot": true,
			"operation": "hostname",
			"params": [
				"vanilla"
			]
		}
	]
}